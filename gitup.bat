@echo off
chcp 65001 > nul

echo ==========================================
echo  GitHubへのアップロードを開始します
echo ==========================================

:: 1. 変更をステージング
git add .

:: 2. コミットメッセージの入力を求める
set /p msg="コミットメッセージを入力してください（Enterで「Update」）: "

:: 入力がなければ「Update」という名前にする
if "%msg%"=="" set msg=Update

:: 3. コミット実行
git commit -m "%msg%"

:: 4. プッシュ実行
git push

echo ==========================================
echo  完了しました！
echo ==========================================
pause